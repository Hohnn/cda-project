  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "api@skydrone.com"
          },
          "password": {
            "type": "string",
            "example": "encrypted"
          },
          "firstName_u": {
            "type": "string",
            "example": "Sky"
          },
          "lastName_u": {
            "type": "string",
            "example": "Drone"
          },
          "company_u": {
            "type": "string",
            "example": "SkyDrone Inc"
          },
          "key_r": {
            "type": "number",
            "example": 1
          },
          "siret_u": {
            "type": "string",
            "example": "FR0123456789"
          },
          "address_u": {
            "type": "string",
            "example": "21 Rue Des Ailes"
          },
          "phone_u": {
            "type": "string",
            "example": "+33000000000"
          }
        },
        "required": [
          "email",
          "password",
          "firstName_u",
          "lastName_u",
          "company_u",
          "key_r",
          "siret_u",
          "address_u",
          "phone_u"
        ]
      },
      "drone": {
        "type": "object",
        "properties": {
          "name_d": {
            "type": "string",
            "example": "Model A"
          },
          "category_id": {
            "type": "string",
            "example": "category_id"
          },
          "description_d": {
            "type": "string",
            "example": "A"
          },
          "pricePerDay_d": {
            "type": "number",
            "example": 123
          },
          "processState_id": {
            "type": "string",
            "example": "processState_id"
          }
        },
        "required": [
          "name_d",
          "description_d",
          "pricePerDay_d"
        ]
      },
      "role": {
        "type": "object",
        "properties": {
          "name_r": {
            "type": "string",
            "example": "administrator"
          },
          "description_r": {
            "type": "string",
            "example": "Create Read Update Delete any data"
          },
          "key_r": {
            "type": "number",
            "example": 1
          }
        },
        "required": [
          "name_r",
          "description_r",
          "key_r"
        ]
      },
      "categories": {
        "type": "object",
        "properties": {
          "name_cat": {
            "type": "string",
            "example": "D"
          },
          "description_cat": {
            "type": "string",
            "example": "les aéronefs utilisés pour un travail aérien d’une masse au décollage inférieure à 2 Kg (structure + charge)"
          },
          "key_cat": {
            "type": "number",
            "example": 1
          }
        },
        "required": [
          "name_cat",
          "description_cat",
          "key_cat"
        ]
      }
    },
